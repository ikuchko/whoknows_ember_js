<form>
  <div class="answer-form">
    <h3>Answers {{answers-amount question.answers}} :</h3>
    <div class="row">
      <div class="col-md-6">
        {{#each question.answers as |answer|}}
          {{answer-tile answer=answer}}
        {{/each}}

        <div class="form-group">
          <h4>Add answer:</h4>
          <label for="author">author</label>
          {{input value=author placeholder="Enter your name" class="form-control"}}
        </div>
        <div class="form-group">
          <label for="answer">answer</label>
          {{textarea value=answer rows="5" cols="80" placeholder="Answer..." class="form-control"}}
        </div>
        <button {{action 'addAnswer'}} class="btn btn-default">Add answer</button>
      </div>
    </div>
  </div>
</form>
